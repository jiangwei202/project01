page {
  background: #fff;
}
.weui-cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
}
.weui-cell .weui-cell_hd image {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 14rpx;
}
.weui-cell .weui-cell_bd {
  color: #be9719;
  font-size: 13px;
}
.weui-cell .weui-cell_ft image {
  display: block;
  width: 30rpx;
  height: 30rpx;
}
.index_swiper {
  padding: 20rpx 20rpx 0 20rpx;
  overflow: hidden;
}
.index_swiper swiper {
  height: 320rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.index_swiper swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.nav2-list {
  display: flex;
  margin: 10rpx 20rpx 0 20rpx;
}
.nav2-list .nav2-item {
  margin-top: 20rpx;
  width: 50%;
  padding: 0 5rpx;
}
.nav2-list .nav2-item .nav2-pic {
  width: 100%;
}
.nav2-list .nav2-item .nav2-pic image {
  display: block;
  width: 100%;
}
.nav-list {
  display: flex;
}
.nav-list .nav-item {
  margin-top: 20rpx;
  width: 20%;
  text-align: center;
  padding: 10rpx 0;
}
.nav-list .nav-item .nav-pic image {
  display: block;
  margin: 0 auto;
  width: 110rpx;
  height: 110rpx;
}
.nav-list .nav-item .nav-text {
  font-size: 24rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
}
.hosp-list {
  margin: 10rpx 0 0 0;
  background: none;
}
.hosp-list ::before {
  display: none;
}
.hosp-list ::after {
  display: none;
}
.hosp-list .hosp-item {
  align-items: stretch;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 1px 6px 0 rgba(0, 0, 0, 0.04), 0 1px 6px 0 rgba(0, 0, 0, 0.04);
}
.hosp-list .hosp-item ::before {
  display: none;
}
.hosp-list .hosp-item ::after {
  display: none;
}
.hosp-list .hosp-item .hosp-avatar {
  display: block;
  width: 200rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.hosp-list .hosp-item .hosp-name {
  font-weight: bold;
  font-size: 34rpx;
}
.hosp-list .hosp-item .hosp-line {
  margin-top: 10rpx;
}
.hosp-list .hosp-item .hosp-line text {
  font-size: 26rpx;
}
.hosp-list .hosp-item .hosp-line .hosp-rank {
  font-weight: bold;
  color: #0bb585;
  margin-right: 15rpx;
}
.hosp-list .hosp-item .hosp-line .hosp-label {
  font-weight: bold;
  color: #0ca7ae;
  margin-right: 15rpx;
}
.hosp-list .hosp-item .hosp-line .hosp-intro {
  color: #999;
  overflow: hidden;
  /* text-overflow: ellipsis; */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
